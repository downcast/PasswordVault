<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/fragment_user_add_title"
            android:id="@+id/fragment_user_add_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_user_add_firstname"
            android:id="@+id/fragment_user_add_firstname_view"
            android:layout_below="@+id/fragment_user_add_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_add_firstname_edit"
            android:layout_below="@+id/fragment_user_add_firstname_view"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:inputType="textCapWords"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:id="@+id/fragment_user_add_lastname_view"
            android:layout_below="@+id/fragment_user_add_firstname_edit"
            android:layout_alignStart="@+id/fragment_user_add_firstname_view"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_add_lastname_edit"
            android:layout_below="@+id/fragment_user_add_lastname_view"
            android:layout_alignStart="@+id/fragment_user_add_firstname_edit"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/fragment_user_add_firstname_edit"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/fragment_user_add_username_view"
            android:layout_below="@+id/fragment_user_add_lastname_edit"
            android:layout_alignStart="@+id/fragment_user_add_lastname_view"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_add_username_edit"
            android:layout_below="@+id/fragment_user_add_username_view"
            android:layout_alignStart="@+id/fragment_user_add_lastname_edit"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/fragment_user_add_lastname_edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/fragment_user_add_password_view"
            android:layout_below="@+id/fragment_user_add_username_edit"
            android:layout_alignStart="@+id/fragment_user_add_username_view"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_add_password_edit"
            android:layout_below="@+id/fragment_user_add_password_view"
            android:layout_alignStart="@+id/fragment_user_add_username_edit"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/fragment_user_add_username_edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:id="@+id/fragment_user_add_department_view"
            android:layout_below="@+id/fragment_user_add_password_edit"
            android:layout_alignStart="@+id/fragment_user_add_password_view"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_add_department_spinner"
            android:layout_below="@+id/fragment_user_add_department_view"
            android:layout_alignStart="@+id/fragment_user_add_password_edit"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/fragment_user_add_password_edit"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team"
            android:id="@+id/fragment_user_add_team_view"
            android:layout_below="@+id/fragment_user_add_department_spinner"
            android:layout_alignStart="@+id/fragment_user_add_department_view"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_add_team_spinner"
            android:layout_below="@+id/fragment_user_add_team_view"
            android:layout_alignStart="@+id/fragment_user_add_department_spinner"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/fragment_user_add_department_spinner"
            android:spinnerMode="dropdown"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_add_btn"
            android:layout_below="@+id/fragment_user_add_team_spinner"
            android:layout_alignParentEnd="true"
            android:text="Create"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</ScrollView>