<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_team_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Create Team"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/fragment_team_add_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fragment_team_add_title"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:text="Name"/>

        <EditText
            android:id="@+id/fragment_team_add_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fragment_team_add_name_view"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fragment_team_add_user_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_team_add_name_view"
            android:layout_below="@+id/fragment_team_add_name_edit"
            android:layout_marginTop="20dp"
            android:text="Users"/>

        <Spinner
            android:id="@+id/fragment_team_add_user_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fragment_team_add_name_edit"
            android:layout_alignStart="@+id/fragment_team_add_name_edit"
            android:layout_below="@+id/fragment_team_add_user_view"
            android:layout_marginTop="10dp"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/fragment_team_add_servers_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_team_add_user_view"
            android:layout_below="@+id/fragment_team_add_user_spinner"
            android:layout_marginTop="20dp"
            android:text="Servers"/>

        <Spinner
            android:id="@+id/fragment_team_add_servers_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fragment_team_add_user_spinner"
            android:layout_alignStart="@+id/fragment_team_add_user_spinner"
            android:layout_below="@+id/fragment_team_add_servers_view"
            android:layout_marginTop="10dp"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/fragment_team_add_department_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_team_add_servers_view"
            android:layout_below="@+id/fragment_team_add_servers_spinner"
            android:layout_marginTop="20dp"
            android:text="Departments"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_team_add_department_spinner"
            android:layout_below="@+id/fragment_team_add_department_view"
            android:layout_alignStart="@+id/fragment_team_add_servers_spinner"
            android:spinnerMode="dropdown"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/fragment_team_add_servers_spinner"/>

        <Button
            android:id="@+id/fragment_team_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_team_add_department_spinner"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="Create"
            android:layout_alignEnd="@+id/fragment_team_add_servers_spinner"
            />
    </RelativeLayout>
</ScrollView>