<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/fragment_login_username_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_login_title"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:text="UserName"/>

    <EditText
        android:id="@+id/fragment_login_username_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_login_username_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/fragment_login_password_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fragment_login_username_view"
        android:layout_below="@+id/fragment_login_username_edit"
        android:layout_marginTop="20dp"
        android:text="Password"/>

    <EditText
        android:id="@+id/fragment_login_password_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fragment_login_username_edit"
        android:layout_alignStart="@+id/fragment_login_username_edit"
        android:layout_below="@+id/fragment_login_password_view"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/fragment_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fragment_login_password_edit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Login"/>

</RelativeLayout>